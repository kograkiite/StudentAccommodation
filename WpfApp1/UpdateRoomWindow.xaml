<Window x:Class="StudentManagement.UpdateRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Room" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <TextBox Name="txtSoPhong" Text="{Binding SoPhong}" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox Name="txtSucChua" Text="{Binding SucChua}" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox Name="txtGiaThue" Text="{Binding GiaThue}" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <Button Name="btnSave" Content="Save" Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>

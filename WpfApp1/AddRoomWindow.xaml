<Window x:Class="StudentManagement.AddRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Room" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <TextBox Name="txtSoPhong" Text="Số Phòng" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox Name="txtSucChua" Text="Sức Chứa" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox Name="txtGiaThue" Text="Giá Thuê" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <Button Name="btnSave" Content="Save" Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>

<!-- EditElectricBillWindow.xaml -->
<Window x:Class="StudentManagement.EditElectricBillWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Electric Bill" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Thông tin hóa đơn điện" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="txtMaTienDien" IsReadOnly="True" Margin="0,0,0,10"/>
            <TextBox x:Name="txtMaHopDong" Margin="0,0,0,10"/>
            <TextBox x:Name="txtSoDien" Margin="0,0,0,10"/>
            <DatePicker x:Name="dpNgayTinhTien" Margin="0,0,0,10"/>
            <TextBox x:Name="txtThanhTien" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Lưu" Click="btnSave_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Hủy" Click="btnCancel_Click" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
